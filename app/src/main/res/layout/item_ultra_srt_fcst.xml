<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/srt_fcst_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HH시"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/srt_fcst_sky_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/srt_fcst_sky_icon"
        android:adjustViewBounds="true"
        android:layout_marginVertical="15dp"
        android:layout_width="@dimen/item_ultra_srt_fcst_sky_icon_size"
        android:layout_height="@dimen/item_ultra_srt_fcst_sky_icon_size"
        app:layout_constraintBottom_toTopOf="@+id/srt_fcst_tmp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/srt_fcst_hour"
        app:srcCompat="@drawable/sky_rainy" />

    <TextView
        android:id="@+id/srt_fcst_tmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99°"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/srt_fcst_sky_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>